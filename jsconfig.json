// jsconfig.json (Versi√≥n Corregida)

{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "nodenext", 
    "target": "ESNext",
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    // Asegura que VS Code reconozca la ruta $lib
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"]
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte"]
}